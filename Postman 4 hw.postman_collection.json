			"name": "Signup (last homework)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var nameVariants = [\r",
							"    { name: \"\" },\r",
							"    { name: \"L\" },\r",
							"    { name: \"Le\" },\r",
							"    { name: \"\" },\r",
							"    { name: \"@#$\" },\r",
							"    { name: \"Andrey\" }\r",
							"];\r",
							"_.each(nameVariants, function (data) {\r",
							"    pm.environment.set(\"name\", data.name);\r",
							"  var nameFromEnvironment = pm.environment.get(\"name\");\r",
							"    \r",
							"    pm.test(\"Проверка поля name на длину, отсутствие специальных символов или пустое поле\", function () {\r",
							"        var minLength = 2;\r",
							"        var maxLength = 20;\r",
							"        var regex = /^[\\w\\s-]+$/;\r",
							"\r",
							"        pm.expect(nameFromEnvironment.length).to.be.within(minLength, maxLength);\r",
							"        pm.expect(nameFromEnvironment).to.match(regex);\r",
							"        pm.expect(nameFromEnvironment).not.to.eql('');\r",
							"    });\r",
							"        });\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
